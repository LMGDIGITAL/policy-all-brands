body{
    font-family: Montserrat, Arial, Helvetica, sans-serif;
    
}

.menu{
    list-style: none;
    padding: 0;
    background: #00aed7 ;
    width: 100%;
    max-width: 1000%;
    margin: auto;
}

.menu li a{
    text-decoration: none;
    color: white;
    padding: 20px;
    display: block;
}

.menu li{
    display: inline-block;
    text-align: center;
}
.menu li a:hover{
    background: #020DFF;

}

line-height:1px;